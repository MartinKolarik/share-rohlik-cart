{
    "manifest_version": 2,

    "name": "Share rohlik.cz cart",
    "version": "0.0.1",
    "minimum_chrome_version": "80",

    "browser_action": {
        "default_popup": "html/popup.html"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/content-script.js"],
            "run_at": "document_start"
        }
    ],

    "permissions": [
        "*://rohlik.cz/*"
    ]
}