{
    "manifest_version": 3,

    "name": "Share rohlik.cz cart",
    "version": "0.0.1",
    "minimum_chrome_version": "88",

    "action": {
        "default_popup": "html/popup.html"
    },

    "background": {
        "service_worker": "service-worker.js"
    },

    "content_scripts": [
        {
            "matches": ["*://rohlik.cz/*", "*://*.rohlik.cz/*"],
            "js": ["js/content-script.js"],
            "run_at": "document_start"
        }
    ],

    "host_permissions": [
        "*://rohlik.cz/*",
        "*://*.rohlik.cz/*"
    ]
}